---
import { Image } from "astro:assets";
import { MenuButton } from "./MenuButton";

import meImage from "../../src/assets/images/avatar.webp";
---

<header class="max-w-extended px-6 py-7 m-auto">
  <nav class="flex justify-between items-center">
    <a href="/" class="brand-avatar">
      <Image
        src={meImage}
        alt="Avatar de Juan Berrios"
        loading="eager"
        class="w-7 h-7 rounded-full"
      />
    </a>
    <MenuButton client:load />
  </nav>
</header>
