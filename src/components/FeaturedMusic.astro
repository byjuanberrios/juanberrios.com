---
import { Image } from "astro:assets";
import "../styles/featuredMusic.css";

const {
  image,
  artist,
  releaseName,
  position,
  appleMusicUrl,
  spotifyUrl,
  small = false,
} = Astro.props;
---

<div class={`musicReleaseCard ${small && "small"}`}>
  <header>
    <Image
      src={image}
      alt={`${artist} - ${releaseName} cover`}
      inferSize={true}
    />
    <div class="releaseData">
      {position && <p class="position">{position}</p>}
      <h2>
        {releaseName}
      </h2>
      <h4>{artist}</h4>
      <div class="platformLinks">
        {
          appleMusicUrl && (
            <div class="link">
              <a href={appleMusicUrl}>Escuchar en Apple music</a>
            </div>
          )
        }
        {
          spotifyUrl && (
            <div class="link">
              <a href={spotifyUrl}>Escuchar en Spotify</a>
            </div>
          )
        }
      </div>
    </div>
  </header>
  <slot />
</div>
