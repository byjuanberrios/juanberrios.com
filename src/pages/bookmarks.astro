---
import Base from "../layouts/Base.astro";
import { BookmarksCategories } from "../components/bookmarks/BookmarksCategories";
import { BookmarksGrid } from "../components/bookmarks/BookmarksGrid";

import "../styles/bookmarks.css";
import { getBookmarks, getBookmarksCategories } from "../scripts/notion";

const categories = await getBookmarksCategories();
const bookmarks = await getBookmarks();
const bookmarksEntries = Object.entries(bookmarks);
---

