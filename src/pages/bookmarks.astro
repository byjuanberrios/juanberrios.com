---
import Base from "../layouts/Base.astro";
import { BookmarksCategories } from "../components/bookmarks/BookmarksCategories";
import { BookmarksGrid } from "../components/bookmarks/BookmarksGrid";

import type { Bookmark, OrderedBookmark } from "../types/types";

import {
  getLinkdingBookmarks,
  getLinkdingCategories,
} from "../scripts/linkding";

import "../styles/bookmarks.css";
import Message from "../components/Message.astro";

const bookmarks: OrderedBookmark = await getLinkdingBookmarks();
const categories: string[] = await getLinkdingCategories();
---

<Base title="Marcadores" description="â€¦">
  <div class="bookmarks">
    <header>
      <h1 class="inPage">Marcadores</h1>
      <Message
        >Algunos de los marcadores de mi lista personal de Linkding.</Message
      >
      <BookmarksCategories categories={categories} client:load />
    </header>

    <BookmarksGrid bookmarks={bookmarks} client:load />
  </div>
</Base>
